extends layout

block content
    h1= title
    #employees
        - each employee in employees
          div.employee
            div.created_at= employee.created_at
            div.title= employee.title 
            div.name= employee.name
                form( method="post", action="/employee/:id/delete", class="actionConfirm") 
                    input(name="_id", type="hidden", value=employee._id) 
                    input(id="delete", value="Delete", type="submit")
                form( method="get", action="/employee/:id/edit") 
                    input(name="_id", type="hidden", value=employee._id.toHexString()) 
                    input(id="edit", value="Edit", type="submit")
                form( method="get", action="/automated/testing", class="actionConfirm") 
                    input(name="_id", type="hidden", value=employee._id) 
                    input(id="edit", value="Run Test As This User", type="submit")
        a(href="/employee/new")!= "Add New App User"
